#!/bin/zsh

# dpkg --get-selections > ~/Package.list
# sudo cp -R /etc/apt/sources.list* ~/
# sudo apt-key exportall > ~/Repo.keys

# create backup to external hdd
sudo rsync -aPv \
    --exclude '.tox' \
    --exclude 'node_modules' \
    --exclude 'Dropbox/' \
    --exclude 'Desktop/' \
    --exclude 'snap/' \
    --exclude '.cache' \
    --exclude '.config' \
    --exclude '.local' \
    --info=progress2 \
  /home/hamed/ /media/hamed/disk/files-backup
